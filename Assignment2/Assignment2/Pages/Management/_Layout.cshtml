<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Assignment2.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="page">
        <div class="sidebar">
            <div class="top-row ps-3 navbar navbar-dark">
                <div class="container-fluid">
                    <a class="navbar-brand" href="">BookStore</a>
                </div>
            </div>

            <input type="checkbox" title="Navigation menu" class="navbar-toggler" />

            <div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
                <nav class="flex-column">
                    <div class="nav-item px-3">
                        <a class="nav-link" href="">
                            <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
                        </a>
                    </div>
                    <div class="nav-item px-3">
                        <a class="nav-link" href="">
                            <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> User
                        </a>
                    </div>
                    <div class="nav-item px-3">
                        <a class="nav-link" href="">
                            <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Publishers - Authors
                        </a>
                    </div>
                    <div class="nav-item px-3">
                        <a class="nav-link" href="/Management/Authors">
                            <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Authors
                        </a>
                    </div>
                    <div class="nav-item px-3">
                        <a class="nav-link" href="/Management/Publisher">
                            <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Publishers
                        </a>
                    </div>
                </nav>
            </div>


        </div>

        <main>
            <div class="top-row px-4">
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
            </div>

            <article class="content px-4">
                @RenderBody()
            </article>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>