@page
@model Assignment2.Pages.RegisterModel

<div class="d-flex flex-column vh-100">
    <div class="d-flex justify-content-center align-items-center flex-grow-1 align-items-center">
        <div>
            <img src="~/img/Screenshot 2024-06-02 005955.jpg" />
        </div>
        <div class="col-5">
            <form method="post">
                <label class="fs-4 fw-bold text-primary mb-4 text-center">Book Stores Login</label>
                <div class="col-8 mb-4">
                    <input type="text" placeholder="email address" class="form-control mb-2" name="txtEmail" value="@Model.email"/>
                    <input type="password" placeholder="password" class="form-control mb-2" name="txtPass" />
                    <input type="password" placeholder="confirm password" class="form-control" name="txtPassConfirm" />
                </div>

                <div class="d-flex mb-4 align-items-center">
                    <button type="submit" class="btn btn-primary col-4 me-4">Sign Up</button>
                    <a href="/Login">Already an user?</a>
                </div>
                @if (!string.IsNullOrEmpty(Model.Error))
                {
                    <div class="alert alert-danger">
                        @Model.Error
                    </div>
                }
            </form>
        </div>
    </div>
</div>

@{

}
